{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "jsx": "react", // 或者 "react-jsx"
      "declaration": true,
      "declarationDir": "./dist/types",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["dom", "es6"],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }